                <targetFolder>target/generated-test-sources/java</targetFolder>
              </configuration>
              <dependencies>
                <dependency>
                  <groupId>org.apache.derby</groupId>
                  <artifactId>derby</artifactId>
                  <version>${derby.version}</version>
                </dependency>
              </dependencies>
            </plugin>
             -->
        </plugins>

    </build>

</project>